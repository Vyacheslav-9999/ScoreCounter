<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/startServer"
        android:layout_width="130dp"
        android:layout_height="61dp"
        android:layout_marginEnd="50dp"
        android:text="@string/start_server"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/connect"
        android:layout_width="80dp"
        android:layout_height="61dp"
        android:text="@string/connect_to"
        app:layout_constraintStart_toEndOf="@+id/startServer"
        app:layout_constraintTop_toTopOf="@+id/startServer" />

    <EditText
        android:id="@+id/input_ip_address"
        android:layout_width="210dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="@string/ip_input_field"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/startServer"
        app:layout_constraintTop_toBottomOf="@+id/startServer" />

    <TextView
        android:id="@+id/server_ip"
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:layout_marginBottom="1dp"
        android:text="@string/ip_field"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/startServer"
        app:layout_constraintStart_toStartOf="@+id/startServer" />

</androidx.constraintlayout.widget.ConstraintLayout>